{
   "manifest_version": 2,
   "name": "xkcd Enhancer",
   "short_name": "xkcd Enhancer",
   "version": "5.2",
   "options_page": "popup/popup.html",
   "background": {
      "scripts": ["background.js"]
   },
   "content_scripts": [ {
      "matches": ["http://xkcd.com/*", "http://xkcd.org/*", "http://xkcd.net/*", "http://www.xkcd.com/*", "http://www.xkcd.org/*", "http://www.xkcd.net/*", "https://xkcd.com/*", "https://xkcd.org/*", "https://xkcd.net/*", "https://www.xkcd.com/*", "https://www.xkcd.org/*", "https://www.xkcd.net/*"],
      "js": ["script.js"]
   } ],
   "description": "Adds features such as keyboard navigation, easy title text, better random comic selection and a link to explain xkcd to xkcd comics.",
   "icons": {
      "128": "icon.png",
      "48": "icon.png"
   },
   "permissions": [
      "activeTab",
      "storage",
      "tabs"
   ],
   "browser_action": {
     "default_icon": "icon.png",
     "default_title": "xkcd Enhancer",
      "default_popup": "popup/popup.html"
   }
}

{
   "manifest_version": 2,
   "name": "xkcd Enhancer",
   "short_name": "xkcd Enhancer",
   "version": "7.3",
   "options_ui": {
      "page": "options/options.html",
      "chrome_style": false,
      "open_in_tab": true
   },
   "content_scripts": [ {
      "matches": ["http://xkcd.com/*", "http://xkcd.org/*", "http://xkcd.net/*", "http://www.xkcd.com/*", "http://www.xkcd.org/*", "http://www.xkcd.net/*", "https://xkcd.com/*", "https://xkcd.org/*", "https://xkcd.net/*", "https://www.xkcd.com/*", "https://www.xkcd.org/*", "https://www.xkcd.net/*"],
      "css": ["fix.min.css"],
      "js": ["script.min.js"]
   } ],
   "description": "This small extension will revolutionise how you view your xkcd comics.",
   "icons": {
      "128": "icon.png",
      "48": "icon.png"
   },
   "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "downloads"
   ],
   "browser_action": {
     "default_icon": "icon.png",
     "default_title": "xkcd Enhancer",
     "default_popup": "popup/popup.html"
   },
   "web_accessible_resources": ["fix.min.css", "script.min.js", "popup/jquery.min.js"]
}

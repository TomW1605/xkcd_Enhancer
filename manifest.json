{
   "manifest_version": 2,
   "name": "xkcd Enhancer",
   "version": "1.0",
   "content_scripts": [ {
      "js": [ "script.js" ],
      "matches": ["http://xkcd.com/*", "http://xkcd.org/*", "http://xkcd.net/*", "http://www.xkcd.com/*", "http://www.xkcd.org/*", "http://www.xkcd.net/*", "https://xkcd.com/*", "https://xkcd.org/*", "https://xkcd.net/*", "https://www.xkcd.com/*", "https://www.xkcd.org/*", "https://www.xkcd.net/*"]
   } ],
   "description": "Adds features such as arrow key navigation, easy title text and a link to explain xkcd to all xkcd comics",
   "icons": {
      "128": "icon.png",
      "48": "icon.png"
   },
   "applications": {
      "gecko": {
         "id": "xkcd@enhancer.com"
      }
   },
   "permissions": [
     "activeTab"
   ],
   "browser_action": {
     "default_icon": "icon.png",
     "default_title": "xkcd Enhancer"
   }
}
